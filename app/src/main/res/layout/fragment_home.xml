<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".Fragment.HomeFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textHalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haloo!!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:foregroundGravity=""/>
            <androidx.cardview.widget.CardView
                android:id="@+id/iconAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/textHalo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintBaseline_toBaselineOf="@+id/textHalo"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_akun">

                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/iconAkun"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iconAkun"

                tools:ignore="MissingConstraints"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/txt_Search"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:hint="Cari Produk "
                            android:fontFamily="@font/poppins_regular"
                            android:drawableRight="@drawable/ic_baseline_search_24"
                            android:drawableTint="@color/grey2"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:background="@null"
                            >
                        </com.google.android.material.textfield.TextInputEditText>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toEndOf="@+id/txt_Search"
                    app:layout_constraintTop_toBottomOf="@+id/iconAkun"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="left"
                    tools:ignore="MissingConstraints">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:src="@drawable/setting"
                            >

                        </ImageView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/linear1"
                android:layout_marginTop="40dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Kategori"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/txt_lihatKtg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lihat"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="20dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        >
                        <Button
                            android:id="@+id/btn_aksesoris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Aksesoris"
                            android:backgroundTint="@color/green1"
                            android:fontFamily="@font/poppins_semibold"/>
                        <Button
                            android:id="@+id/btn_tas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/btn_aksesoris"
                            android:layout_margin="10dp"
                            android:text="Tas"
                            android:backgroundTint="@color/green1"
                            android:fontFamily="@font/poppins_semibold"/>
                        <Button
                            android:id="@+id/btn_sepatu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/btn_tas"
                            android:layout_margin="10dp"
                            android:text="Sepatu"
                            android:backgroundTint="@color/green1"
                            android:fontFamily="@font/poppins_semibold"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/linear2"
                android:layout_marginTop="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard Penjualan"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints"
                        />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txt_dashboard">
                        <TableRow
                            android:id="@+id/tbl">

                            <TextView
                                android:text="Username">
                            </TextView>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Id Transaksi">
                            </TextView>
                        </TableRow>
                    </TableLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/linear3"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_barangLaris"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Barang Laris"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/txt_lihatBrg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lihat"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="20dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/gbr1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr1"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <ImageView
                            android:id="@+id/gbr2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr2"
                            app:layout_constraintStart_toEndOf="@id/gbr1"
                            android:layout_marginLeft="20dp"
                            />
                        <ImageView
                            android:id="@+id/gbr3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr3"
                            app:layout_constraintStart_toEndOf="@id/gbr2"
                            android:layout_marginLeft="20dp"
                            />
                        <ImageView
                            android:id="@+id/gbr4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr3"
                            app:layout_constraintStart_toEndOf="@id/gbr3"
                            android:layout_marginLeft="20dp"
                            />
                        <ImageView
                            android:id="@+id/gbr5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr3"
                            app:layout_constraintStart_toEndOf="@id/gbr4"
                            android:layout_marginLeft="20dp"
                            />
                        <ImageView
                            android:id="@+id/gbr6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gbr3"
                            app:layout_constraintStart_toEndOf="@id/gbr5"
                            android:layout_marginLeft="20dp"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/nav_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_nav_bottom"
                    app:itemIconTint="@color/white"
                    app:itemRippleColor="@color/green3"
                    app:itemTextColor="@color/white"
                    app:menu="@menu/menu"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="60dp"
                    >
                </com.google.android.material.bottomnavigation.BottomNavigationView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>
